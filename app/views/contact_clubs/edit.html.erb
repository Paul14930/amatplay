<h1>Modifier le Contact</h1>

<%= form_with model: [@club, @contact_club], local: true do |form| %>
  <div class="mb-4">
    <%= form.label :civilite, "Civilité", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :civilite, ["Mr", "Mme", "Mlle"], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= form.label :nom, "Nom", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :nom, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :prenom, "Prénom", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :prenom, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :telephone, "Téléphone", class: "block text-sm font-medium text-gray-700" %>
    <%= form.telephone_field :telephone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :mail, "Email", class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :mail, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :qualite, "Qualité", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :qualite, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Mettre à jour", class: "inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-indigo-500 active:bg-indigo-700 focus:outline-none focus:border-indigo-700 focus:ring focus:ring-indigo-200 disabled:opacity-25 transition" %>
    <%= link_to "Annuler", club_path(@club), class: "ml-4 text-indigo-600 hover:text-indigo-800" %>
  </div>
<% end %>
