<h1>Créer un nouveau club</h1>

<%= form_with model: @club, local: true do |form| %>
  <div>
    <%= form.label :name, "Nom du club" %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :location, "Localisation du club" %><br>
    <%= form.text_field :location, required: true %>
  </div>

  <div>
    <%= form.label :description, "Description du club" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Créer le club" %>
  </div>
<% end %>
